{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,

    "layout": {
      "contentSize": "1200px",
      "wideSize": "1400px"
    },

    "spacing": {
      "padding": true,
      "margin": true,
      "blockGap": true,
      "units": ["px", "rem", "%", "vw", "vh"],
      "spacingSizes": [
        { "slug": "30", "size": "0.5rem", "name": "XS" },
        { "slug": "40", "size": "1rem", "name": "Small" },
        { "slug": "50", "size": "1.5rem", "name": "Medium" },
        { "slug": "60", "size": "2rem", "name": "Large" },
        { "slug": "70", "size": "3rem", "name": "XL" },
        { "slug": "80", "size": "4rem", "name": "2XL" }
      ]
    },

    "color": {
      "defaultPalette": false,
      "defaultGradients": false,
      "palette": [
        { "slug": "primary", "name": "Primary Green", "color": "#22C55E" },
        { "slug": "primary-dark", "name": "Dark Green", "color": "#15803D" },
        { "slug": "primary-light", "name": "Neon Green", "color": "#05df72" },

        { "slug": "base", "name": "Base Text", "color": "#ffffff" },
        { "slug": "muted", "name": "Muted Text", "color": "#9ca3af" },

        { "slug": "background", "name": "Background", "color": "#000000" },
        { "slug": "surface", "name": "Surface", "color": "#111111" },
        { "slug": "border", "name": "Border Gray", "color": "#333333" }
      ]
    },

    "typography": {
      "fluid": true,
      "lineHeight": true,
      "fontFamilies": [
        {
          "slug": "system",
          "name": "System UI",
          "fontFamily": "ui-sans-serif, system-ui, sans-serif"
        },
        {
          "slug": "mono",
          "name": "Monospace",
          "fontFamily": "ui-monospace, \"Cascadia Code\", \"Source Code Pro\", Menlo, Consolas, \"DejaVu Sans Mono\", monospace"
        }
      ],
      "fontSizes": [
        { "slug": "xs", "name": "Extra Small", "size": "0.75rem" },
        { "slug": "sm", "name": "Small", "size": "0.875rem" },
        { "slug": "base", "name": "Base", "size": "1rem" },
        { "slug": "lg", "name": "Large", "size": "1.25rem" },
        { "slug": "xl", "name": "Extra Large", "size": "1.5rem" },
        { "slug": "2-xl", "name": "2X Large", "size": "2rem" },
        { "slug": "3-xl", "name": "3X Large", "size": "2.5rem" },
        { "slug": "xxl", "name": "Hero", "size": "clamp(2.5rem, 5vw, 3.5rem)" }
      ]
    },

    "blocks": {
      "core/button": {
        "border": { "radius": true }
      },
      "core/navigation": {
        "spacing": {
          "blockGap": true
        }
      }
    }
  },

  "styles": {
    "color": {
      "background": "var(--wp--preset--color--background)",
      "text": "var(--wp--preset--color--base)"
    },

    "typography": {
      "fontFamily": "var(--wp--preset--font-family--system)",
      "fontSize": "var(--wp--preset--font-size--base)",
      "lineHeight": "1.6"
    },

    "spacing": {
      "blockGap": "var(--wp--preset--spacing--50)"
    },

    "elements": {
      "link": {
        "color": { "text": "var(--wp--preset--color--primary)" },
        "typography": {
          "textDecoration": "none"
        },
        ":hover": {
          "color": { "text": "var(--wp--preset--color--primary-dark)" },
          "typography": {
            "textDecoration": "underline"
          }
        }
      },
      "heading": {
        "typography": {
          "fontWeight": "700",
          "lineHeight": "1.2"
        }
      },
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xxl)"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--3-xl)"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--2-xl)"
        }
      },
      "button": {
        "border": {
          "radius": "0px"
        },
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "var(--wp--preset--color--background)"
        },
        "typography": {
          "fontWeight": "600",
          "fontSize": "var(--wp--preset--font-size--base)"
        },
        "spacing": {
          "padding": {
            "top": "0.75rem",
            "right": "1.5rem",
            "bottom": "0.75rem",
            "left": "1.5rem"
          }
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--primary-dark)"
          }
        }
      }
    },

    "blocks": {
      "core/button": {
        "variations": {
          "outline": {
            "border": {
              "width": "2px",
              "style": "solid",
              "color": "var(--wp--preset--color--primary)"
            },
            "color": {
              "background": "transparent",
              "text": "var(--wp--preset--color--primary)"
            },
            ":hover": {
              "color": {
                "background": "var(--wp--preset--color--primary)",
                "text": "var(--wp--preset--color--background)"
              }
            }
          }
        }
      },
      "core/navigation": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--base)",
          "fontWeight": "500"
        },
        "elements": {
          "link": {
            ":hover": {
              "typography": {
                "textDecoration": "none"
              }
            }
          }
        }
      },
      "core/post-title": {
        "typography": {
          "fontWeight": "700",
          "lineHeight": "1.2"
        },
        "elements": {
          "link": {
            "color": {
              "text": "var(--wp--preset--color--base)"
            },
            ":hover": {
              "color": {
                "text": "var(--wp--preset--color--primary)"
              },
              "typography": {
                "textDecoration": "none"
              }
            }
          }
        }
      },
      "core/code": {
        "color": {
          "background": "var(--wp--preset--color--surface)",
          "text": "var(--wp--preset--color--base)"
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--mono)",
          "fontSize": "var(--wp--preset--font-size--sm)"
        },
        "spacing": {
          "padding": {
            "top": "var(--wp--preset--spacing--30)",
            "right": "var(--wp--preset--spacing--40)",
            "bottom": "var(--wp--preset--spacing--30)",
            "left": "var(--wp--preset--spacing--40)"
          }
        },
        "border": {
          "radius": "4px"
        }
      },
      "core/group": {
        "variations": {
          "tech-card": {
            "color": {
              "background": "#222222",
              "text": "#ffffff"
            },
            "border": {
              "radius": "12px",
              "color": "#222222",
              "width": "1px",
              "style": "solid"
            },
            "spacing": {
              "padding": {
                "top": "16px",
                "bottom": "16px",
                "left": "20px",
                "right": "20px"
              }
            }
          }
        }
      }
    }
  }
}
